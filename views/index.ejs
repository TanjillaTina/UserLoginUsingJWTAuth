<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>User Login Using JWT Auth</title>
       
        
    <!-- Bootstrap -->
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
   <link href="/css/jumbotron-narrow.css" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <div class="header">
              <ul class="nav nav-pills pull-right">
              

                  <li><a href="/register">Register Now</a></li>
                <li><a href="/auth/login">Login</a></li>
                
          
                
              </ul>
              <h3 class="text-muted">User Login Using JWT Auth</h3>
            </div>
      
            <div class="jumbotron" id="AddNew">
              <h1>Login Using</h1>
              <p class="lead"></p>
              <p></p>
              <div class="row">
      
                  <% if(success_msg) { %>
                    
                    
                       <h3 class="mysuccess"> <%= success_msg %> </h3>
                          
                    <% }%>
                  
                    <% if(error) { %>
                    
                    
                      <h3 class="myerror"> <%= error_msg %> </h3>
                         
                   <% }%>
                    

                  <div class="col-md-12 col-xs-12 col-sm-0 col-lg-12 ">
                    <div class="col-md-1 col-xs-2 col-sm-0 col-lg-2 "></div>
                    <div class="col-md-10 col-xs-8 col-sm-8=12 col-lg-8">
                   
                        <form method="POST" action="/login">
                            <div class="form-group">
                              <label for="text">Username</label>
                              <input type="text" class="form-control" name="username" placeholder="Enter Username">
                              
                            </div>
                            <div class="form-group">
                              <label for="password">Password</label>
                              <input type="password" class="form-control" name="password" placeholder="Password">
                            </div>
                            
                            <button type="submit" class="btn btn-primary">Submit</button>
                          </form>
                       
                      
                    </div>
                    <div class="col-md-1 col-xs-2 col-sm-0 col-lg-2"></div>
        
        
                </div>
              </div>
      
          </div> <!-- /container -->
        </div>
    </body>
</html>